<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WikstromIT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="container-fluid bg-light bg-image-light flex-grow-1">
        <nav class="navbar navbar-expand-md bg-dark bg-image-dark fixed-top">
            <div class="container-fluid">
                <div class="d-flex w-100">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="">
                            <span class="toggler-icon">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                        </span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-start" id="mainNavbar">
                        <ul id="mainMenu" class="navbar-nav">
                            <li class="nav-item mx-2">
                                <a class="nav-link active" data-submenu="none" href="/Home/Index">Home</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link" href="#" data-submenu="AboutMeMenu">About Me</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link" href="#" data-submenu="PortfolioMenu">Portfolio</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        <div id="contentWrapper" style="overflow-y: auto; overflow-x: hidden;">
            <div class="row flex-nowrap bg-light">
                <div class="bg-image-light d-none d-md-block col-md-1 col-lg-2"></div>
                <main id="main-content" class="bg-white flex-grow-1 col-sm-12 p col-md-10 col-lg-8 d-flex flex-column">
                    @RenderBody()
                </main>
                <div class="bg-image-light d-none d-md-block col-md-1 col-lg-2"></div>
            </div>
        </div>
    </div>
    <footer class="border-top footer-custom text-muted mt-auto flex-shrink-0 w-100">
        <div class="container-fluid">
            &copy; 2025 - WikstromIT
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
