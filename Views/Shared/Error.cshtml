@using AvikstromPortfolio
@using AvikstromPortfolio.Models
@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment Env
@model ErrorViewModel
@{
    Layout = null; // no site-wide layout (no footer/header)
    ViewData["Title"] = "Error";
}

<div class="error-page text-center" style="padding:2rem; background:#111; color:#eee; font-family:'Roboto Condensed','Courier New',Courier,monospace;">
    <h1 style="color#d9534f;">Oops!</h1>

    @if (Model.StatusCode.HasValue)
    {
        <h2>
            @switch (Model.StatusCode)
            {
                case 404:
                    @:The page you requested could not be found.
                    break;
                case 403:
                    @:You do not have permission to access this resource.
                    break;
                default:
                    @:An unexpected error occurred. Please try again later.
                    break;
            }
        </h2>
        <p>Please try again later.</p>
    }
    else
    {
        <h2>An unexpected error occurred. Please try again later.</h2>
    }

    @* Show technical details only in Development *@
    @if (Env.IsDevelopment())
    {
        <div style="margin-top:1rem; font-size:0.85rem; color:#888;">
            @if (Model.StatusCode.HasValue)
            {
                <p>Status Code: @Model.StatusCode</p>
            }
            @if (Model.ShowRequestId)
            {
                <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
            }
        </div>
    }
</div>
