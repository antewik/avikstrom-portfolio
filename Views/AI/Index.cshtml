<div class="p-3">
<form method="post" asp-controller="AI" asp-action="SubmitText">
    <h1>AI Chat</h1>
    <input type="text" name="UserInput" class="form-control form-control-lg" placeholder="Enter text here" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewData["AIResponse"] != null)
{
    <div class="mt-4">
        <label>AI Response:</label>
        <textarea class="form-control" rows="4">@ViewData["AIResponse"]</textarea>
    </div>
}
</div>