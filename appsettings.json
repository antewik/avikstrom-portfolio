{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "F1InfoApi": {
    "BaseUrl": "",
    "CacheMinutes": 10
  },

  "FlightInfoApiOptions": {
    "BaseUrl": "",
    "OffsetMinutes": -10,
    "DurationMinutes": 180
  },

  "FlightBoardPolling": {
    "IntervalSeconds": 30,
    "DisplayCount": 15,
    "ApiRefreshSeconds": 120
  },

  "ExternalScripts": {
    "SignalR": "https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"
  },

  "ConnectionStrings": {
    "DefaultConnection": ""
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}\n{Exception}\n"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/home/LogFiles/Application/log-.txt",
          "rollingInterval": "Day",
          "shared": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
